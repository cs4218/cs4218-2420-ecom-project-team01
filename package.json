{
  "name": "ecom",
  "version": "1.0.0",
  "description": "ecommerce rest api",
  "main": "server.js",
  "scripts": {
    "start": "babel-node server.js",
    "server": "nodemon --exec babel-node server.js --ignore client",
    "test-server": "cross-env NODE_ENV=test npm run server",
    "client": "npm start --prefix ./client",
    "test-client": "cross-env PORT=3001 REACT_APP_ENV=test npm run client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test:playwright": "concurrently \"npm run test-client\" \"npm run test-server\"",
    "sonarqube": "sonar-scanner",
    "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
    "test:frontend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.frontend.config.js",
    "test:backend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.backend.config.js"
  },
  "keywords": [],
  "author": "RP",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "braintree": "^3.22.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "express": "^4.18.2",
    "express-formidable": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.3",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.0.1",
    "react-toast": "^1.0.3",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/node": "^7.26.0",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.12.12",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "sonarqube-scanner": "^3.3.0",
    "supertest": "^7.0.0"
  }
}
